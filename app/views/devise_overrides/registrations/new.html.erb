<%= form_for(resource, :as => resource_name, :url => user_registration_path, :html => {:id => 'create_user'}) do |f| %>
    <!-- Step 1 -->
    <%= devise_error_messages! %>
    <fieldset id="page1" class="investement-first property invest-dashboard signup-bg">
        <div class="container">
            <div class="col-md-10 col-sm-12 col-xs-12  center-container  color-white singup-wrapper stepone">
                <h1 class="color-white title-invest margin-none text-center heading">Join the Club</h1>
                <p class="text-center sub-headi">Signing up is free, fast &  simple - no commitments or long-term contracts</p>
                <div class="col-md-4 col-sm-12 col-xs-12 text-center step-category">
                    <h3>  <i class="fa fa-check-circle color-yellow"></i> Step One</h3>
                    <p>Create your free account with your name, email, and password</p>
                </div>
                <div class="col-md-4 col-sm-12 col-xs-12 text-center step-category">
                    <h3>  <i class="fa fa-check-circle color-yellow"></i> Step Two</h3>
                    <p>Answer some simple questions about the investments that interest you</p>
                </div>
                <div class="col-md-4 col-sm-12 col-xs-12 text-center step-category">

                    <h3>  <i class="fa fa-check-circle color-yellow"></i> Step Three</h3>
                    <p>Share some additional details to complete your investor profile</p>
                </div>
                <div class='col-md-12 hr-wrapper center-container'>
                    <hr>
                </div>
                
                <div class="col-md-12 no-padding form-wrapper">
                    <div class="col-md-6 col-sm-12 col-xs-12 ">
                        <label>Your Email</label>
                        <%= f.text_field :email, :class => 'form-control', :autofocus => true, :placeholder => 'name@example.com', :required => true, type: :email, :'data-msg-required' => "Please enter your email address"  %>
                        <%= show_field_error(@user, :email) %>

                    </div>
                     <div class="col-md-3 col-sm-6 col-xs-6 ">
                        <label>First name</label>
                        <%=f.text_field :first_name, :required => true, :placeholder => "First name (e.g John)", :class => "form-control"%>
                    </div>
                     <div class="col-md-3 col-sm-6 col-xs-6 ">
                        <label>Last name</label>
                        <%=f.text_field :last_name, :required => true, :placeholder => "Last name (e.g Smith)", :class => "form-control"%>
                    </div>  

                </div>
                <div class="col-md-12 no-padding form-wrapper">
                    <div class="col-md-6 col-sm-12 col-xs-12">
                        <label>Create Password</label>
                        <%= f.password_field :password, :class => 'form-control set-margin', :autofocus => true, :autocomplete => "off", :placeholder => 'New Password', :required => true, pattern: "(?=^.{6,}$)(?=.*\\d)(?=.*[a-z])(?=.*[A-Z])(?!.*\\s).*$" %>
                        <%= show_field_error(@user, :password) %>
                    </div> 
                    <div class="col-md-6 col-sm-12 col-xs-12">
                        <label>password Strength</label>
                        <ul>
                            <li><i id="char_length" class="fa fa-close color-red"></i> More than 6 character</li>
                            <li><i id="char_uper" class="fa fa-close color-red"></i> Contain upper (A-Z) and lowercase (a-z)</li>
                            <li><i id="contain_numb" class="fa fa-close color-red"></i> contains a number(0-9)</li>
                        </ul>
                    </div>
                </div>
                
                <div class="col-md-12 no-padding form-wrapper">
                    <div class="col-md-6 col-sm-12 col-xs-12">
                         <label>Phone Number</label>
                         <%= f.text_field :phone_number, :class => 'form-control set-margin phone_us', :autocomplete => "off", :placeholder => '(999) 999-9999', :required => true%>
                    </div>
                </div>

                <div class="col-md-12 no-padding form-wrapper">
                   <div class="col-md-6 col-sm-12 col-xs-12">
                       <label>Country</label>
                        <%= country_select("user", "country", { priority_countries: ["US"], selected: "US" }, { class: 'form-control', required: true }) %>
                   </div>
                    <div class="col-md-6 col-sm-12 col-xs-12 ">
                        <label>Country Restriction</label>
                        <p class="restriction-txt">Some countries may have restrictions about real estate crowdfunding. <a href="http://www.landbaronclub.com/contact/">Contact us</a> for details.</p>
                    </div>
                </div>
                    
                <div class='col-md-12 hr-wrapper center-container'>
                    <hr>
                </div>
                <div class="signup_navigation_button"></div>

            </div>
        </div>
    </fieldset>

    <fieldset id="page2" class="investement-first property invest-dashboard">
        <div class="container">


            <div class="col-md-11 col-sm-12 col-xs-12 investnow dashboeardproperty center-container singup-wrapper">
                <h1 class="color-white title-invest margin-none payment text-center">What you are looking for?</h1>
                 <p class="text-center sub-headi color-white">Answer the questions below about your investment goals and the kinds of investments that interest you the most. This information will help us notify you of opportunities that meet your needs and contribute to the kind of opportunities we host at Land Baron Club.</p>
           
          
            <div class='col-md-12 hr-wrapper center-container'>
                <hr>
            </div>
            <div class="col-md-12 no-padding form-wrapper">
                <div class="col-md-6 col-sm-12 col-xs-12 ">
                    <label  class="color-white">What type(s) of property are you interested in?</label>
                    <select name="user[property_types]" class="form-control">
                        <option value="Residential">Residential</option>
                        <option value="Commercial">Commercial</option> 
                        <option value="Both">Both</option>
                        <option value="Undecided">Undecided</option>
                    </select>
                </div>
                <div class="col-md-6 col-sm-12 col-xs-12 ">
                    <label  class="color-white">What type(s) of deals are you interested in?</label>
                    <select name="user[deal_types]" class="form-control">
                        <option value="Debt">Debt</option>
                        <option value="Equity">Equity</option>
                        <option value="Both">Both</option> 
                        <option value="Undecided">Undecided</option>
                    </select>
                </div> 

                </div>
               <div class="col-md-12 no-padding form-wrapper ">
                    <div class="col-md-6 col-sm-12 col-xs-12 ">
                        <label class="color-white">Budget Range</label>
                        <div class="layout-slider" style="width: 100%">
                            <span class=" rang-span" style="display: inline-block;     margin: 15px 0px; width: 100%;  padding: 0 5px;">
                                <input id="Slider1" type="slider" name="user[budget_range]" value="30000.5;60000" />
                            </span>  
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12 col-xs-12 ">
                        <label class="color-white">Risk Profile</label>
                          

                        <div class="layout-slider" style="display: inline-block;     margin: 15px 0px; width: 100%;  padding: 0 5px;">
                          <input id="SliderSingle" type="slider" name="user[risk_tolerance]" value="2" />
                        </div>
                    </div> 
                </div>
                
                 <div class='col-md-12 center-container invest-profile step-three'>
                    <div class='col-md-12 center-container no-padding'>
                        <h3 class="color-white text-left border-none">
                            Categories
                        </h3>
                        <div class='col-md-3 no-padding check-profile'>
                            <div class="form-group">
                                <div class="checkbox">
                                    <input id="appartments_check" value="Apartments" type="checkbox" name="user[property_categories][]" >
                                    <label for="appartments_check">Apartments</label>
                                </div>
                            </div>
                        </div>
                        <div class='col-md-3 no-padding check-profile'>
                            <div class="form-group">
                                <div class="checkbox">
                                    <input id="residential_check" value="Residential Homes" type="checkbox" name="user[property_categories][]" >
                                    <label for="residential_check">Residential Homes</label>
                                </div>
                            </div>
                        </div>
                         <div class='col-md-3 no-padding check-profile'>
                            <div class="form-group">
                                <div class="checkbox">
                                    <input id="industrial_check" value="Industrial Space" type="checkbox" name="user[property_categories][]" >
                                    <label for="industrial_check">Industrial Space</label>
                                </div>
                            </div>
                        </div>
                        <div class='col-md-3 no-padding check-profile'>
                            <div class="form-group">
                                <div class="checkbox">
                                    <input id="self_storage_check" value="Self-Storage" type="checkbox" name="user[property_categories][]" >
                                    <label for="self_storage_check">Self-Storage</label>
                                </div>
                            </div>
                        </div>
                          <div class='col-md-3 no-padding check-profile'>
                            <div class="form-group">
                                <div class="checkbox">
                                    <input id="commercial_check" value="Commercial/Office Use" type="checkbox" name="user[property_categories][]" >
                                    <label for="commercial_check">Commercial/Office Use</label>
                                </div>
                            </div>
                        </div>
                        <div class='col-md-3 no-padding check-profile'>
                            <div class="form-group">
                                <div class="checkbox">
                                    <input id="new_developmen_check" value="New Developments" type="checkbox" name="user[property_categories][]" >
                                    <label for="new_developmen_check">New Developments</label>
                                </div>
                            </div>
                        </div>
                         <div class='col-md-3 no-padding check-profile'>
                            <div class="form-group">
                                <div class="checkbox">
                                    <input id="high_rises_check" value="High-rises or Skyscrapers" type="checkbox" name="user[property_categories][]" >
                                    <label for="high_rises_check">High-rises or Skyscrapers</label>
                                </div>
                            </div>
                        </div>
                        <div class='col-md-3 no-padding check-profile'>
                            <div class="form-group">
                                <div class="checkbox">
                                    <input id="rehabilitations_check" value="Rehabilitations or Flips" type="checkbox" name="user[property_categories][]" >
                                    <label for="rehabilitations_check">Rehabilitations or Flips</label>
                                </div>
                            </div>
                        </div>
                        <div class='col-md-12 hr-wrapper center-container'>
                            <hr>
                        </div>
                        <div class="signup_navigation_button"></div>

                        <!-- <div class=" text-center ">
                            <p class="text-center"><button class="btn-continue">continue <i class="fa fa-arrow-right"></i> </button> </p>
                            <p class="text-center restriction-txt">
                               Lorem Ipsum is simply dummy text of the printing and typesetting industry.
                            </p>
                        </div> -->
                    </div>
                </div>
            </div>
      </div>

    </fieldset>


    <!-- Step 3 -->
    <fieldset id="page3" class="investement-first property invest-dashboard signup-bg">
        <div class="container">
            <div class="col-md-10 col-sm-12 col-xs-12  center-container  color-white singup-wrapper">
                <h1 class="color-white title-invest margin-none text-center heading">Tell us about yourself</h1>
                <p class="text-center sub-headi">Almost done! Share some additional information to complete your investor profile and help us customize your Land Baron Club experience.</p>
                <div class='col-md-12 hr-wrapper center-container'>
                    <hr>
                </div>
              
                <div class="col-md-12 no-padding form-wrapper">
                    <div class="col-md-6 col-sm-12 col-xs-12">
                        <label>Have you ever invested in real estate before?</label>
                        <select name="user[invested_in_realestate]" class="form-control">
                            <option value="Yes">Yes</option>
                            <option value="No">No</option> 
                            <option value="Not sure">Not sure</option>
                        </select>
                    </div> 
                    <div class="col-md-6 col-sm-12 col-xs-12">
                        <label>What is your primary reason for wanting to invest? </label>
                        <!-- <input type="text"  placeholder="" class="form-control" /> -->
                        <select name="user[reason_to_invest]" class="form-control">
                            <option value="Growth">Growth</option>
                            <option value="Retirement">Retirement</option> 
                            <option value="Diversification">Diversification</option>
                            <option value="Other">Other</option>
                        </select>
                   </div> 
                </div>
                <div class="col-md-12 no-padding">
                    <div class="col-md-6 col-sm-12 col-xs-12 ">
                        <label>What are your current investments primarily in?</label>
                        <!-- <input type="text"  placeholder="" class="form-control" /> -->
                        <!-- <input type="text" id="user_current_investments" name="user[current_investments]" class="form-control"> -->
                        <select multiple="multiple" id="user_current_investments" name="user[current_investments][]" class="">
                            <option value="Stocks">Stocks</option>
                            <option value="Bonds">Bonds</option>
                            <option value="Real Estate">Real Estate</option> 
                            <option value="Forex">Forex</option>
                            <option value="International">International</option>
                            <option value="Other">Other</option>
                        </select>
                        
                    </div>
                     
                    <div class="col-md-6 col-sm-12 col-xs-12">
                          <label>How did you hear about us?</label>
                        <!-- <input type="text"  placeholder="" class="form-control" /> -->
                        <select name="user[hear_about_us]" class="form-control">
                            <option value="Friend">Friend</option>
                            <option value="Work">Work</option>
                            <option value="Social Media">Social Media</option> 
                            <option value="Internet Ad">Internet Ad</option>
                            <option value="Webinar">Webinar</option>
                            <option value="Seminar">Seminar</option>
                            <option value="Printed Ad">Printed Ad</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-8 col-md-offset-2">
                    <div class="signup-notice">
                        Due to existing securities regulations, only <a target="_blank" href="http://www.investor.gov/news-alerts/investor-bulletins/investor-bulletin-accredited-investors">accredited investors</a> can view and invest in private real estate opportunities. Please tell us a little about yourself and how you are accredited.
                    </div>
                </div>

                <div class="col-md-10 col-md-offset-1 signup-notice invest-profile">
                    <div class="col-md-12">
                        <div class="checkbox">
                            <input type="radio" id="annual_income_check" name="user[self_accredition]" value="anual_income">
                            <label for="annual_income_check" class="non-transformed-text"><b>Annual Income</b><br/>
                                <p>I made more than $200k annually (or $300k combined with my spouse) for the past 2 years and expect the same this year.<p>
                            </label>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="checkbox">
                            <input type="radio" id="net_worth_check" name="user[self_accredition]" value="net_worth">
                            <label for="net_worth_check" class="non-transformed-text"><b>Net Worth</b><br/>
                               <p>I currently have an individual (or joint net worth with my spouse) over $1 million excluding my primary residence.</p>
                            </label>
                        </div>
                    </div>
                    
                    <div class="col-md-12">
                        <div class="checkbox">
                            <input type="radio" id="buisness_check" name="user[self_accredition]" value="business">
                            <label for="buisness_check" class="non-transformed-text"><b>Business</b><br/>
                               <p>I am a representative of a bank, insurance company, registered investment company, business development company, or small business investment company interested in investment opportunities on LandBaronClub.com</p>
                            </label>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="checkbox">
                            <input type="radio" id="none_of_above_check" name="user[self_accredition]" value="none">
                            <label for="none_of_above_check" class="non-transformed-text"><b><p>None of the above</p></b></label>
                        </div>
                    </div>
                </div>

                <div class="col-md-10 col-md-offset-1 signup-notice invest-profile">
                    <h2>I Agree</h2>
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="checkbox">
                                <input type="checkbox" id="terms_acceptance_1" name="user[terms_accepted][]">
                                    <label id="label_terms_acceptance_1" for="terms_acceptance_1" class="non-transformed-text">By checking this box, you represent that you have such knowledge and experience in financial and business matters that you are capable of evaluating the merits and risks of real estate investments, and you are able to bear the economic risk of real estate investments including the risk of complete loss.
                                    </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="checkbox">
                                <input type="checkbox" id="terms_acceptance_2" name="user[terms_accepted][]">
                                    <label id="label_terms_acceptance_2" for="terms_acceptance_2" class="non-transformed-text">* By checking this box you:
                                        (a) understand that Land Baron Club will rely on the foregoing representations to, among other things, maintain compliance with securities laws,
                                        (b) certify that your answers to the foregoing questions are correctly stated to the best of your knowledge, information and belief, and,
                                        (c) you further agree that Land Baron Club may require (in order for you to remain a member of Land Baron Club or participate in any investment) that you (or your accountant or attorney) furnish any additional information to Land Baron Club that it deems reasonably necessary in order to verify your answers to the foregoing questions.
                                    </label>
                            </div>
                        </div>
                    </div>
                </div>
                    
                <div class='col-md-12 hr-wrapper center-container'>
                    <hr>
                </div>
                
                <div class="col-md-12 signup-btn over-flow">
                    <p class="text-center">
                        <button id="create_user_button" class="invest-btn"> Create Account <i class="fa fa-chevron-right"></i></button>  
                    </p>
                </div>
            </div>
           
        </div>
    </fieldset>
    <div id="myModal" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="signupModalLabel">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="signupModalLabel"><img src="/assets/images/favicon.ico"></img>  Terms and conditions</h4>
          </div>
          <div class="modal-body">
            You cannot create an account without agreeing to our terms and conditions.<br/><br/>
            Thanks,<br/>
            Team Landbaron.
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Ok, Got it!</button>
          </div>
        </div>
      </div>
    </div>

<%end%>


<script type="text/javascript">
    // $("#create_user").multipage({ submitButton: 'create_user_button' });

    $('#user_current_investments').selectize({delimiter: ','})
    $('#create_user_button').bind("click", function(e){
        if (!($("#terms_acceptance_2").is(":checked")) || !($("#terms_acceptance_1").is(":checked"))){
            $('#myModal').modal({keyboard: false, backdrop: 'static'})
            e.preventDefault()
            return;
        }
    })

    jQuery("#Slider1").slider({ 
        from: 1000, 
        to: 100000, 
        step: 500, 
        smooth: true, 
        round: 0, format: {format: '$#####'}, skin: "plastic"
    });
    $("#SliderSingle").slider({ 
        from: 1, 
        to: 3, 
        step: 1, 
        round: 1, 
        format: { 
            format: '##.0', 
            locale: 'de' 
        }, 
        calculate: function( value ){
            if(value == 1){
                return "Conservative";
            }else if(value == 2){
                return "Moderate";
            }else{
                return "Aggressive";
            }
        }, 
        skin: "round" 
    });
    $(".slider")
                        
    .slider({ 
        min: 0, 
        max: 1000, 
        range: true, 
        values: [200, 800] 
    })
                        
    .slider("pips", {
        rest: "label"
    })
                        
    .slider("float");
</script>
