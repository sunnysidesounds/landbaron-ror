#annotate Models with database attributes
gem 'annotate', '~> 2.6.6'

# Paperclip file upload => Getting latest version
gem 'paperclip', '~> 4.2'

# Marketo API
gem 'mrkt'

# html parser
gem 'truncate_html'

#NewRelic
